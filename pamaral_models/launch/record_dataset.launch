<launch>
    <include file="$(find pamaral_perception_system)/launch/camera_setup.launch">
        <arg name="enable_top_camera" value="false"/>
        <arg name="front_camera_create_suspended" value="true"/>
    </include>

    <include file="$(find pamaral_models)/launch/hands_detection_mediapipe.launch">
        <arg name="input_image_topic" value="front_camera/color/image_raw"/>
    </include>

    <node name="record_dataset" pkg="pamaral_models" type="record_dataset.py" output="screen">
        <param name="output_folder" value="$(find data)/bag_files"/>
    </node>

    <node name="rviz" pkg="rviz" type="rviz"
          args="--display-config $(find pamaral_models)/config/rviz.rviz" required="false"/>
</launch>