<launch>
    <include file="$(find pamaral_models)/launch/hands_detection_mediapipe.launch">
        <arg name="input_image_topic" value="front_camera/color/image_raw"/>
    </include>

    <include file="$(find pamaral_models)/launch/points_preprocessing.launch"/>

    <include file="$(find pamaral_models)/launch/save_points_csv.launch"/>

    <node name="play_dataset" pkg="pamaral_models" type="play_dataset.py" output="screen"/>

    <node name="rviz" pkg="rviz" type="rviz"
          args="--display-config $(find pamaral_models)/config/rviz.rviz" required="false"/>
</launch>