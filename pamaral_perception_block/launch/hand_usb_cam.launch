<launch>
    <arg name="image_view" default="true" />

    <node name="hand_usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
        <rosparam command="load" file="$(find pamaral_perception_block)/config/hand_usb_cam.yml"/>
    </node>

    <node if="$(arg image_view)" name="image_view" pkg="image_view" type="image_view"
        respawn="false" output="screen">
        <remap from="image" to="/usb_cam/image_raw"/>
        <param name="autosize" value="true" />
    </node>
</launch>
