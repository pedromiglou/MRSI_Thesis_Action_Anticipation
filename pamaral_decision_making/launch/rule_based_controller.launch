<launch>
    <node name="rule_based_controller" pkg="pamaral_decision_making" type="rule_based_controller.py" output="screen">
        <param name="quaternion_poses" value="$(find pamaral_decision_making)/config/quaternion_poses/positions.json"/>
        <param name="rules_path" value="$(find pamaral_decision_making)/config/rules.json"/>
    </node>

    <include file="$(find pamaral_utils)/launch/video_bag_recorder.launch">
        <arg name="input_topic" value="/top_camera/color/image_raw"/>
        <arg name="output_path" value="$(find data)/bag_files/top_camera"/>
    </include>

    <include file="$(find pamaral_utils)/launch/video_bag_recorder.launch">
        <arg name="input_topic" value="/front_camera/color/image_raw"/>
        <arg name="output_path" value="$(find data)/bag_files/front_camera"/>
    </include>
</launch>