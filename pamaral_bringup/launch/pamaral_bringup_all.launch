<launch>
    <!--launch files for robot drivers, controllers and planner-->
    <include file="$(find larcc_bringup)/launch/ur10e_bringup.launch"/>

    <!--launch file for communicating with the cameras-->
    <include file="$(find larcc_bringup)/launch/cameras.launch"/>

    <!--launch file to locate human using the depth images-->
    <include file="$(find pamaral_perception_system)/launch/human_locator.launch"/>

    <!--launch files to locate objects in the table images-->
    <include file="$(find pamaral_perception_system)/launch/simple_cropper.launch">
        <arg name="input_image_topic" value="top_camera/color/image_raw"/>
        <arg name="output_image_topic" value="table_image"/>
    </include>
    
    <include file="$(find pamaral_perception_system)/launch/object_color_segmenter.launch">
        <arg name="colors" value="green;red;light_blue;dark_blue;white;yellow;orange;violet"/>
        <arg name="input_image_topic" value="table_image"/>
        <arg name="min_area" value="100"/>
        <arg name="prefix" value="table_"/>
    </include>

    <!-- object recognition pipeline -->
    <include file="$(find pamaral_object_grasping_pattern_recognition)/launch/object_recognition_pipeline.launch">
        <arg name="input_image_topic" value="front_camera/color/image_raw"/>
    </include>

    <!--launch files to locate objects in the user's hand-->
    <!-- <include file="$(find pamaral_perception_system)/launch/hands_cropper_mediapipe.launch"/>

    <include file="$(find pamaral_perception_system)/launch/object_color_segmenter.launch">
        <arg name="colors" value="green;red;light_blue;dark_blue;white;yellow;orange"/>
        <arg name="input_image_topic" value="hand_image"/>
        <arg name="min_area" value="100"/>
        <arg name="prefix" value="hand_"/>
    </include> -->

    <!-- Launch file to visualize details of the system using rviz -->
    <include file="$(find pamaral_visualization)/launch/visualization.launch"/>
</launch>